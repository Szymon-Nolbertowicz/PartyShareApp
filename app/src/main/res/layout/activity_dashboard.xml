<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <include layout="@layout/toolbar_dashboard"/>



    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/partysharelogo"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/btnCreate"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Create Party"
        android:fontFamily="@font/centurygothic"
        android:textColor="@color/main"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/btn_dashboard"
        android:padding="15dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/btnPartyList"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Party List"
        android:fontFamily="@font/centurygothic"
        android:textColor="@color/main"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCreate"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btn_dashboard"
        android:padding="15dp"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/btnFriendsList"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Friends List"
        android:fontFamily="@font/centurygothic"
        android:textColor="@color/main"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/btnPartyList"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/btn_dashboard"
        android:padding="15dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/btnStats"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:fontFamily="@font/centurygothic"
        android:textColor="@color/main"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/btnFriendsList"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btn_dashboard"
        android:padding="15dp"
        android:layout_marginRight="15dp" />






</androidx.constraintlayout.widget.ConstraintLayout>